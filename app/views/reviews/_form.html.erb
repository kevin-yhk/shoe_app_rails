<%= form_for [@shoe, @review] do |f| %>
    
    <%= f.hidden_field :user_id, :value => current_user.id%>
    <%= f.label :title %> 
    <%= f.text_field :title%>
    <br>
    <%= f.label :review %> 
    <%= f.text_area :review %>
    
    <br>
    <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>
    
    <br>
    <%= f.submit %>
  <% end %>