<h1>SIGN UP</h1>

<%= form_for @user do |f| %>
    <%= f.label :username %> 
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %> 
    <%= f.email_field :email %>
    <br>   
    <%= f.label :password %> 
    <%= f.password_field :password %>

    <br>
    <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>
    
    <br>
    <%= f.submit %>
  <% end %>